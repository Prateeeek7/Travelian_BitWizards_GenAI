# Travelian India Backend Environment Variables
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================
GEMINI_API_KEY=your_google_gemini_api_key_here

# =============================================================================
# OPTIONAL API KEYS FOR ENHANCED FEATURES
# =============================================================================
TAILVY_API_KEY=your_tailvy_api_key_here
MONGODB_URI=your_mongodb_connection_string_here
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# EXTERNAL SERVICE URLS
# =============================================================================
# Google AI Services
GOOGLE_AI_STUDIO_URL=https://ai.google.dev/
GOOGLE_MAPS_API_URL=https://maps.googleapis.com/maps/api
GOOGLE_MAPS_EMBED_URL=https://www.google.com/maps/embed/v1

# OpenStreetMap Services (Free, no API key required)
OPENSTREETMAP_API_URL=https://www.openstreetmap.org/api
OPENSTREETMAP_DIRECTIONS_URL=https://www.openstreetmap.org/directions
OPENSTREETMAP_EMBED_URL=https://www.openstreetmap.org/export/embed.html

# Optional External Services
TAILVY_API_URL=https://api.tailvy.com
MONGODB_ATLAS_URL=https://cloud.mongodb.com

# =============================================================================
# INTERNAL API ENDPOINTS
# =============================================================================
# Backend API Endpoints
HEALTH_ENDPOINT=/health
TRAVEL_PLAN_ENDPOINT=/travel/plan
CHATBOT_ENDPOINT=/chatbot/ask
API_DOCS_ENDPOINT=/docs
REDOC_ENDPOINT=/redoc

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3000,http://localhost:3001

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# MONGODB CONFIGURATION (Optional)
# =============================================================================
MONGO_USERNAME=admin
MONGO_PASSWORD=password
MONGO_DATABASE=travel_db
MONGO_PORT=27017
